{
  "compilerOptions": {
    "outDir": "app/dist/js",
    "target": "ES6",
    "noEmitOnError": true, //não vai gerar dist/js enquanto o typescript não estiver correto
    "noImplicitAny": true,
    "removeComments": true,
    "strictNullChecks": true,
    "experimentalDecorators": true
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules"]
}
